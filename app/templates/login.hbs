<form class="form-inline" {{action 'authenticate' on='submit'}}>
	<p>Username: test<br/>Password: test</p>
	<div class="form-group">
		<label class="sr-only" for="identification">Username</label>
		{{input  class="form-control" id='identification' placeholder='Username' value=identification}}
	</div>
	<div class="form-group">
		<label class="sr-only" for="password">Password</label>
		{{input class="form-control" id='password' placeholder='Password' type='password' value=password}}
	</div>
	<button type="submit" class="btn btn-primary">Login</button>
	{{#if errorMessage}}
	<p>{{errorMessage}}</p>
	{{/if}}
</form>
